@page "/Playaudio/{PFileName}"
@inject Microsoft.AspNetCore.Components.NavigationManager NavMan
@using Microsoft.AspNetCore.Http
@using System.IO;
@namespace FileManager.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<audio controls autoplay style="width:100%;height:100%;">
    @{string filePath = Uri.UnescapeDataString(HttpContext.Request.QueryString.Value);}
    <source src="@("/OpenAudioStream/" +  System.IO.Path.GetFileName(filePath).Trim('"') + filePath )" type="audio/mp3">
    Your browser does not support the audio tag.
</audio>


